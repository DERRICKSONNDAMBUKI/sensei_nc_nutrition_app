<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.deficiencies.fragment.DeficiencyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deficiencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_deficiency"
            android:layout_margin="@dimen/text_margin"
            android:textSize="30sp"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/deficiencySignsAndSymptomsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deficiency_signs_and_symptoms"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deficiencySignsAndSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deficiency_signs_and_symptoms"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/deficiencyNutrientsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_nutrients"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deficiencyNutrients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_nutrients"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/deficiencyFunctionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deficiency_function"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deficiencyFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deficiency_function"
            android:textColor="@color/foreground_color"
            android:layout_margin="@dimen/text_margin"
            android:textSize="20sp" />

        <!-- deficiency foods recyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deficiencyFoodsRecyclerView"
            android:name="Condition foods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/fragment_foods" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

