<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.deficiencies.fragment.DeficiencyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deficiencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_condition"
            android:layout_margin="@dimen/text_margin"
            android:textSize="30sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/deficiencySignsAndSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:layout_margin="@dimen/text_margin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/deficiencyNutrients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_nutrients"
            android:layout_margin="@dimen/text_margin"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/deficiencyFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:layout_margin="@dimen/text_margin"
            android:textSize="20sp" />

        <!-- deficiency foods recyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deficiencyFoodsRecyclerView"
            android:name="Condition foods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/fragment_foods" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

